@model GeneratorBase.MVC.Models.T_Employee
@{
    ViewBag.Title = "Create Employee";
	var EntityDisplayNameReflector = ModelReflector.Entities.FirstOrDefault(p => p.Name == "T_Employee");
    var EntityDisplayName = EntityDisplayNameReflector != null ? EntityDisplayNameReflector.DisplayName : "Employee";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-title">
		@{
                var hostingValue = "";
                if (ViewBag.DisplayVal != null)
                {
                    hostingValue = " - " + ViewBag.DisplayVal;
                }
            }
            <i class="glyphicon glyphicon-save text-primary"></i> @EntityDisplayName  <i class="glyphicon glyphicon-chevron-right small"></i> <span> Add Employee @hostingValue</span>
<div class="btn-group pull-right" style="margin-top:3px; margin-right:3px">

    @if (ViewData["HostingEntity"]==null)
	{ 
			 <a href="@(Url.Action("SetFSearch", "T_Employee")+Request.Url.Query)" data-original-title="Faceted Search"  class="btn btn-xs  btn-default"><i class="glyphicon glyphicon-search"></i> Search</a>
	}
			<button class="btn btn-xs btn-default" type="button" data-original-title="List View" data-placement="top" onclick=@Html.Raw("NavigateToUrl('" + Url.Action("Index", "T_Employee") + "');")>
				<i class="glyphicon glyphicon-list"></i> List
			</button>
			</div>
	

        </h1>
        <h2 class="text-primary">@Html.DisplayFor(model => model.DisplayValue)</h2>
    </div>
    <!-- /.col-lg-12 -->
</div>
@Html.Partial("~/Views/T_Employee/CreatePartial.cshtml", Model)
