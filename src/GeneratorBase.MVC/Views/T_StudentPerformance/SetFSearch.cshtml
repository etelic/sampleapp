@model IEnumerable<GeneratorBase.MVC.Models.T_StudentPerformance>
@{
    ViewBag.Title = "Set Search Criteria";
	var parentUrl = HttpUtility.ParseQueryString(Request.UrlReferrer.Query);
}
<script>
    function keypressHandler(e) {
        if (e.which == 13) {
            $(this).blur();
            $('#fSearchT_StudentPerformance').focus().click();
        }
    }
 $(document).keypress(keypressHandler);
 $(document).ready(function () {
  if ("@parentUrl".length > 0) {
			 document.getElementById("FSearch").value = "@parentUrl["search"]";
	    
			document.getElementById("T_Mark1To").value = "@parentUrl["T_Mark1To"]";
			 document.getElementById("T_Mark1From").value = "@parentUrl["T_Mark1From"]";
	    
			document.getElementById("T_Mark2To").value = "@parentUrl["T_Mark2To"]";
			 document.getElementById("T_Mark2From").value = "@parentUrl["T_Mark2From"]";
	    
			document.getElementById("T_TotalMarksTo").value = "@parentUrl["T_TotalMarksTo"]";
			 document.getElementById("T_TotalMarksFrom").value = "@parentUrl["T_TotalMarksFrom"]";
 if ("@parentUrl["t_studentcode"]" != null && "@parentUrl["t_studentcode"]".length > 0) {
            var resT_StudentCode = "@parentUrl["t_studentcode"]".split(",");
            var eleT_StudentCode = document.getElementById("t_studentcode");
            for (i = 0; i < resT_StudentCode.length; i++) {
                for (var o = 0; o < eleT_StudentCode.options.length; o++) {
                    if (eleT_StudentCode.options[o].value == resT_StudentCode[i])
                        eleT_StudentCode.options[o].selected = true;
                }
            }
	}
 }
    });
</script>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-title">
            <i class="glyphicon glyphicon-search text-primary"></i> StudentPerformance <i class="glyphicon glyphicon-chevron-right small"></i> <span>Faceted Search</span>
        </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
			 <div class="fsearch">
				<div class="panel panel-default">
						   <div class="panel-body fsearchbg">
                            <div class='col-sm-9 small'>
							<div class='col-sm-4'>
                                    <label class='col-sm-12'> General Criteria </label>
									@{
									var txtGenCriteria = String.IsNullOrEmpty(Convert.ToString(ViewBag.CurrentFilter)) ? "" : Convert.ToString(ViewBag.CurrentFilter);
									}
									<input type="text" id="FSearch" class="form-control" placeholder="General Criteria" value="@txtGenCriteria" />
                             </div>
                                <div class='col-sm-4'>
                                    <label class='col-sm-12'> Mark1</label>
									<div class='input-group'>
                                    <input type="text" id="T_Mark1From" class="form-control"  placeholder="From"/>
                                <span class="input-group-addon datefiled">
                                    <input type="text" id="T_Mark1To" class="form-control" placeholder="To" style=" border-radius:0px 4px 4px 0px; border-left:0px"/>
 </span>
                                </div></div>
                                <div class='col-sm-4'>
                                    <label class='col-sm-12'> Mark2</label>
									<div class='input-group'>
                                    <input type="text" id="T_Mark2From" class="form-control"  placeholder="From"/>
                                <span class="input-group-addon datefiled">
                                    <input type="text" id="T_Mark2To" class="form-control" placeholder="To" style=" border-radius:0px 4px 4px 0px; border-left:0px"/>
 </span>
                                </div></div>
                                <div class='col-sm-4'>
                                    <label class='col-sm-12'> Total Marks</label>
									<div class='input-group'>
                                    <input type="text" id="T_TotalMarksFrom" class="form-control"  placeholder="From"/>
                                <span class="input-group-addon datefiled">
                                    <input type="text" id="T_TotalMarksTo" class="form-control" placeholder="To" style=" border-radius:0px 4px 4px 0px; border-left:0px"/>
 </span>
                                </div></div>
    @if (ViewBag.t_studentcode!=null)
	{ 
							<div class='col-sm-4' style="height:55px;" >
                                    <label class='col-sm-12' for="t_studentcode"> Student</label>
		
	 @Html.DropDownList("t_studentcode", null, new {   @multiple = "multiple", @HostingName = "T_Student", @dataurl = Url.Action("GetAllMultiSelectValue", "T_Student",null) })
							</div>
	}
  
					 </div>
		<div class='col-sm-3' style="padding:10px; background:white; border:1px solid #c3ddec !important">
                @if (User.Identity.IsAuthenticated && User != null && User.CanView("T_StudentPerformance"))
                { 
					<button class="btn btn-xs  btn-default tip-top pull-right" type="button" data-original-title="Full Add" data-placement="top" onclick=@Html.Raw("NavigateToUrl('" + Url.Action("Index", "T_StudentPerformance") + "');") style="padding:4px 10px 7px 10px; height:30px !important; margin-bottom:5px; width:100%; text-align:left;">
						<span class="glyphicon glyphicon-list"></span> List
					</button>
				}
				@if (User.Identity.IsAuthenticated && User != null && User.CanAdd("T_StudentPerformance"))
                {
                    <button class="btn btn-xs  btn-default tip-top" type="button" data-original-title="Create New" data-placement="top" onclick=@Html.Raw("NavigateToUrl('" + Url.Action("Create", "T_StudentPerformance", new { UrlReferrer = Request.Url, AssociatedType=ViewData["AssociatedType"], HostingEntityName = @Convert.ToString(ViewData["HostingEntity"]), HostingEntityID = @Convert.ToString(ViewData["HostingEntityID"]) }, null) + "');") style="padding:4px 10px 7px 10px; height:30px !important; margin-bottom:5px; width:100%; text-align:left;">
                        <span class="fam-world-add"></span> Create New
                    </button>
                }
				 <button class="btn btn-default tip-top" data-placement="top" data-original-title="Show Graph" style="padding:4px 10px 7px 10px; height:30px !important; margin-bottom:5px; width:100%; text-align:left;" data-toggle="modal" data-target="#ShowGraphT_StudentPerformance" onclick=@Html.Raw("OpenDashBoard('dvShowGraphT_StudentPerformance');")>
                                <span class="fam-chart-bar"></span> Dashboard
                 </button>
		@if (ViewBag.FavoriteItem != null)
        {
				<div class="col-lg-12 col-sm-12 col-sx-12" style="padding:0px; ">
                    <table class="table table-striped table-bordered table-hover table-condensed ">
                        <thead>
                            <tr>
                                <th colspan="2">Favorite Items</th>
                            </tr>
                        </thead>
                        @foreach (GeneratorBase.MVC.Models.FavoriteItem fItem in ViewBag.FavoriteItem)
                        {
						<tr>
                            <td>
                                <a href='/@GeneratorBase.MVC.Models.CommonFunction.Instance.AppURL().ToString()@fItem.LinkAddress'>@fItem.Name</a>
                            </td>
                        </tr>                           
                        }
                </table>
            </div>
        }
            </div>
					  </div>
                                        </div>
                                    </div>
   <a href="@Url.Action("Index")" class="btn btn-default btn-sm"> Cancel</a>
<button id="fSearchT_StudentPerformance" class="btn btn-primary btn-sm" type="button" dataurl="@(Url.Action("FSearch", "T_StudentPerformance", null) )"
        onclick="@(Html.Raw("FacetedSearch('T_StudentPerformance','t_studentcode','T_Mark1From,T_Mark1To,T_Mark2From,T_Mark2To,T_TotalMarksFrom,T_TotalMarksTo','"
    +  Convert.ToString(Request.QueryString["sortBy"]) +"','"
     + Convert.ToString(Request.QueryString["isAsc"]) + "','" + "'); "))">
    Search
</button>
<script>
    $(document).ready(function () {
	 $('#t_studentcode').multiselect({
            buttonWidth: '100%'
        });
    });
</script>
    <div class="modal fade" id="ShowGraphT_StudentPerformance" tabindex="-1" role="dialog" aria-labelledby="ShowGraphT_StudentPerformanceLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="ShowGraphT_StudentPerformanceLabel">Dashboard StudentPerformance</h4>
                </div>
                <div id="dvShowGraphT_StudentPerformance" class="modal-body" data-url="@Url.Action("ShowGraph", "T_StudentPerformance")">
                </div>
            </div>
        </div>
    </div>

