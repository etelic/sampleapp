@model IEnumerable<GeneratorBase.MVC.Models.T_Student>
@{
    ViewBag.Title = "Set Search Criteria";
	var parentUrl = HttpUtility.ParseQueryString(Request.UrlReferrer.Query);
}
<script>
    function keypressHandler(e) {
        if (e.which == 13) {
            $(this).blur();
            $('#fSearchT_Student').focus().click();
        }
    }
 $(document).keypress(keypressHandler);
 $(document).ready(function () {
  if ("@parentUrl".length > 0) {
			 document.getElementById("FSearch").value = "@parentUrl["search"]";
document.getElementById("T_Fulltime").value = "@parentUrl["T_Fulltime"]";
document.getElementById("T_Parttime").value = "@parentUrl["T_Parttime"]";
 if ("@parentUrl["t_schoolname"]" != null && "@parentUrl["t_schoolname"]".length > 0) {
            var resT_SchoolName = "@parentUrl["t_schoolname"]".split(",");
            var eleT_SchoolName = document.getElementById("t_schoolname");
            for (i = 0; i < resT_SchoolName.length; i++) {
                for (var o = 0; o < eleT_SchoolName.options.length; o++) {
                    if (eleT_SchoolName.options[o].value == resT_SchoolName[i])
                        eleT_SchoolName.options[o].selected = true;
                }
            }
	}
 if ("@parentUrl["t_departmentcode"]" != null && "@parentUrl["t_departmentcode"]".length > 0) {
            var resT_DepartmentCode = "@parentUrl["t_departmentcode"]".split(",");
            var eleT_DepartmentCode = document.getElementById("t_departmentcode");
            for (i = 0; i < resT_DepartmentCode.length; i++) {
                for (var o = 0; o < eleT_DepartmentCode.options.length; o++) {
                    if (eleT_DepartmentCode.options[o].value == resT_DepartmentCode[i])
                        eleT_DepartmentCode.options[o].selected = true;
                }
            }
	}
 }
    });
</script>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-title">
            <i class="glyphicon glyphicon-search text-primary"></i> Student <i class="glyphicon glyphicon-chevron-right small"></i> <span>Faceted Search</span>
        </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
			 <div class="fsearch">
				<div class="panel panel-default">
						   <div class="panel-body fsearchbg">
                            <div class='col-sm-9 small'>
							<div class='col-sm-4'>
                                    <label class='col-sm-12'> General Criteria </label>
									@{
									var txtGenCriteria = String.IsNullOrEmpty(Convert.ToString(ViewBag.CurrentFilter)) ? "" : Convert.ToString(ViewBag.CurrentFilter);
									}
									<input type="text" id="FSearch" class="form-control" placeholder="General Criteria" value="@txtGenCriteria" />
                             </div>
			<div class='col-sm-4' style="height:55px;">
                                    <label class='col-sm-12'> Fulltime </label>
                                       <select id="T_Fulltime" class="form-control">
                                        <option value="All">All</option>
                                        <option value="true">true</option>
                                        <option value="false">false</option>
                                    </select>
			</div>
			<div class='col-sm-4' style="height:55px;">
                                    <label class='col-sm-12'> Parttime </label>
                                       <select id="T_Parttime" class="form-control">
                                        <option value="All">All</option>
                                        <option value="true">true</option>
                                        <option value="false">false</option>
                                    </select>
			</div>
    @if (ViewBag.t_schoolname!=null)
	{ 
							<div class='col-sm-4' style="height:55px;" >
                                    <label class='col-sm-12' for="t_schoolname"> School</label>
		
	 @Html.DropDownList("t_schoolname", null, new {   @multiple = "multiple", @HostingName = "T_School", @dataurl = Url.Action("GetAllMultiSelectValue", "T_School",null) })
							</div>
	}
    @if (ViewBag.t_departmentcode!=null)
	{ 
							<div class='col-sm-4' style="height:55px;" >
                                    <label class='col-sm-12' for="t_departmentcode"> Department</label>
		
	 @Html.DropDownList("t_departmentcode", null, new {   @multiple = "multiple", @HostingName = "T_Department", @dataurl = Url.Action("GetAllMultiSelectValue", "T_Department",null) })
							</div>
	}
  
					 </div>
		<div class='col-sm-3' style="padding:10px; background:white; border:1px solid #c3ddec !important">
                @if (User.Identity.IsAuthenticated && User != null && User.CanView("T_Student"))
                { 
					<button class="btn btn-xs  btn-default tip-top pull-right" type="button" data-original-title="Full Add" data-placement="top" onclick=@Html.Raw("NavigateToUrl('" + Url.Action("Index", "T_Student") + "');") style="padding:4px 10px 7px 10px; height:30px !important; margin-bottom:5px; width:100%; text-align:left;">
						<span class="glyphicon glyphicon-list"></span> List
					</button>
				}
				@if (User.Identity.IsAuthenticated && User != null && User.CanAdd("T_Student"))
                {
                    <button class="btn btn-xs  btn-default tip-top" type="button" data-original-title="Create New" data-placement="top" onclick=@Html.Raw("NavigateToUrl('" + Url.Action("Create", "T_Student", new { UrlReferrer = Request.Url, AssociatedType=ViewData["AssociatedType"], HostingEntityName = @Convert.ToString(ViewData["HostingEntity"]), HostingEntityID = @Convert.ToString(ViewData["HostingEntityID"]) }, null) + "');") style="padding:4px 10px 7px 10px; height:30px !important; margin-bottom:5px; width:100%; text-align:left;">
                        <span class="fam-world-add"></span> Create New
                    </button>
	
				<button style="padding:4px 10px 7px 10px; height:30px !important; margin-bottom:5px; width:100%; text-align:left;" class="btn btn-xs  btn-default tip-top" type="button" data-original-title="Add Wizard" data-placement="top" style="padding:4px 5px;" onclick=@Html.Raw("NavigateToUrl('" + Url.Action("CreateWizard", "T_Student", new { UrlReferrer = Request.Url, AssociatedType=ViewData["AssociatedType"], HostingEntityName = @Convert.ToString(ViewData["HostingEntity"]), HostingEntityID = @Convert.ToString(ViewData["HostingEntityID"]) }, null) + "');")>
					<span class="fam-chart-organisation-add"></span> Create Wizard
				</button>		
                }
				 <button class="btn btn-default tip-top" data-placement="top" data-original-title="Show Graph" style="padding:4px 10px 7px 10px; height:30px !important; margin-bottom:5px; width:100%; text-align:left;" data-toggle="modal" data-target="#ShowGraphT_Student" onclick=@Html.Raw("OpenDashBoard('dvShowGraphT_Student');")>
                                <span class="fam-chart-bar"></span> Dashboard
                 </button>
		@if (ViewBag.FavoriteItem != null)
        {
				<div class="col-lg-12 col-sm-12 col-sx-12" style="padding:0px; ">
                    <table class="table table-striped table-bordered table-hover table-condensed ">
                        <thead>
                            <tr>
                                <th colspan="2">Favorite Items</th>
                            </tr>
                        </thead>
                        @foreach (GeneratorBase.MVC.Models.FavoriteItem fItem in ViewBag.FavoriteItem)
                        {
						<tr>
                            <td>
                                <a href='/@GeneratorBase.MVC.Models.CommonFunction.Instance.AppURL().ToString()@fItem.LinkAddress'>@fItem.Name</a>
                            </td>
                        </tr>                           
                        }
                </table>
            </div>
        }
            </div>
					  </div>
                                        </div>
                                    </div>
   <a href="@Url.Action("Index")" class="btn btn-default btn-sm"> Cancel</a>
<button id="fSearchT_Student" class="btn btn-primary btn-sm" type="button" dataurl="@(Url.Action("FSearch", "T_Student", null) )"
        onclick="@(Html.Raw("FacetedSearch('T_Student','t_schoolname,t_departmentcode','T_Fulltime,T_Parttime','"
    +  Convert.ToString(Request.QueryString["sortBy"]) +"','"
     + Convert.ToString(Request.QueryString["isAsc"]) + "','" + "'); "))">
    Search
</button>
<script>
    $(document).ready(function () {
	 $('#t_schoolname').multiselect({
            buttonWidth: '100%'
        });
	 $('#t_departmentcode').multiselect({
            buttonWidth: '100%'
        });
    });
</script>
    <div class="modal fade" id="ShowGraphT_Student" tabindex="-1" role="dialog" aria-labelledby="ShowGraphT_StudentLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="ShowGraphT_StudentLabel">Dashboard Student</h4>
                </div>
                <div id="dvShowGraphT_Student" class="modal-body" data-url="@Url.Action("ShowGraph", "T_Student")">
                </div>
            </div>
        </div>
    </div>

