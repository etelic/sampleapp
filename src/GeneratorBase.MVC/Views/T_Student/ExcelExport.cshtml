@model PagedList.IPagedList<GeneratorBase.MVC.Models.T_Student>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = null;
    Response.ContentType = "application/vnd.ms-excel";
    Response.AddHeader("Content-Disposition", "attachment; filename=Student.xls");
}
                    <table>
                            <tr>
@if(User.CanView("T_Student","T_Fulltime"))
{
		<th>Fulltime</th>
}
@if(User.CanView("T_Student","T_Parttime"))
{
		<th>Parttime</th>
}
@if(User.CanView("T_Student","T_SchoolNameID"))
{
		<th  @(Convert.ToString(ViewData["HostingEntity"]) == "T_School"?"hidden":"")>School</th>
}
@if(User.CanView("T_Student","T_DepartmentCodeID"))
{
		<th  @(Convert.ToString(ViewData["HostingEntity"]) == "T_Department"?"hidden":"")>Department</th>
}
@if(User.CanView("T_Student","T_Name"))
{
		<th>Name</th>
}
@if(User.CanView("T_Student","T_Description"))
{
		<th>Description</th>
}
@if(User.CanView("T_Student","T_Code"))
{
		<th>Code</th>
}
    </tr>
@foreach (var item in Model) {
    <tr>
	@if(User.CanView("T_Student","T_Fulltime"))
{
		<td>
            @Html.DisplayFor(modelItem => item.T_Fulltime)
        </td>
}
@if(User.CanView("T_Student","T_Parttime"))
{
		<td>
            @Html.DisplayFor(modelItem => item.T_Parttime)
        </td>
}
@if(User.CanView("T_Student","T_SchoolNameID"))
{
		<td @(Convert.ToString(ViewData["HostingEntity"]) == "T_School"?"hidden":"")>
            @Html.DisplayFor(modelItem => item.t_schoolname.DisplayValue)
        </td>
}
@if(User.CanView("T_Student","T_DepartmentCodeID"))
{
		<td @(Convert.ToString(ViewData["HostingEntity"]) == "T_Department"?"hidden":"")>
            @Html.DisplayFor(modelItem => item.t_departmentcode.DisplayValue)
        </td>
}
@if(User.CanView("T_Student","T_Name"))
{
		<td>
            @Html.DisplayFor(modelItem => item.T_Name)
        </td>
}
@if(User.CanView("T_Student","T_Description"))
{
		<td>
            @Html.DisplayFor(modelItem => item.T_Description)
        </td>
}
@if(User.CanView("T_Student","T_Code"))
{
		<td>
            @Html.DisplayFor(modelItem => item.T_Code)
        </td>
}
                                </tr>
                            }
</table>
               
