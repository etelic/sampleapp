               <div class="row">         
					<div class='col-sm-6 col-md-6 col-xs-12' id="dvT_Name">
                                <div class='form-group'>
                                   <label class="col-sm-5 col-md-5 col-xs-12" >@Html.LabelFor(model => model.T_Name) <span class="text-danger-reg">*</span></label>
